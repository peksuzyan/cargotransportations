<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="cargotransportations">
        <class>com.tsystems.cargotransportations.entity.Cargo</class>
        <class>com.tsystems.cargotransportations.entity.Driver</class>
        <class>com.tsystems.cargotransportations.entity.Truck</class>
        <class>com.tsystems.cargotransportations.entity.Order</class>
        <class>com.tsystems.cargotransportations.entity.User</class>
        <class>com.tsystems.cargotransportations.entity.Route</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/cargotransportations"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="Pervant123"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
        </properties>
    </persistence-unit>

</persistence>